    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "runtimeArgs": ["--allow-file-access-from-files",
            "--autoplay-policy=no-user-gesture-required"],
            "url": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        }
    ]
}